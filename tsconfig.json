{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": false,
      "allowImportingTsExtensions": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "resolveJsonModule": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  
